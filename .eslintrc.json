{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "extends": ["plugin:prettier/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "comma-dangle": ["warn", "only-multiline"],
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off"
  }
}
